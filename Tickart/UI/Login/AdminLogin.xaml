<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Tickart.UI.AdminLogin"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <!--  logo  -->
        <Image
            Grid.Row="0"
            Margin="0,40"
            Aspect="AspectFit"
            HeightRequest="90"
            Source="logo.png" />


        <!--  heading  -->
        <Label
            Grid.Row="1"
            Margin="0,40"
            FontFamily="logofont"
            FontSize="20"
            HorizontalOptions="Center"
            Text="Admin Login"
            TextColor="{DynamicResource Tertiary}"
            VerticalOptions="Center" />




        <!--  Form Entries  -->
        <Frame
            Grid.Row="2"
            Margin="10"
            Padding="20,15,15,15"
            BorderColor="{DynamicResource Tertiary}"
            CornerRadius="12"
            HeightRequest="100">
            <StackLayout>
                <Label
                    FontFamily="NexaHeavy"
                    FontSize="18"
                    Text="Email"
                    TextColor="#9B9AA0" />
                <Entry
                    FontFamily="NexaHeavy"
                    FontSize="18"
                    HeightRequest="50"
                    Placeholder="example@gmail.com"
                    TextColor="Black" />
            </StackLayout>
        </Frame>

        <Frame
            Grid.Row="3"
            Margin="10"
            Padding="20,15,15,15"
            BorderColor="{DynamicResource Tertiary}"
            CornerRadius="12"
            HeightRequest="100">
            <StackLayout>
                <Label
                    FontFamily="NexaHeavy"
                    FontSize="18"
                    Text="Password"
                    TextColor="#9B9AA0" />
                <Entry
                    FontFamily="NexaHeavy"
                    FontSize="18"
                    HeightRequest="50"
                    IsPassword="True"
                    Placeholder="xxxxxxxx"
                    TextColor="Black" />
            </StackLayout>
        </Frame>

        <Label
            Grid.Row="4"
            Margin="4,0"
            FontSize="16"
            HorizontalOptions="End"
            Text="Forgot Password?"
            TextColor="{DynamicResource AccentColor}"
            VerticalOptions="Center">
            <Label.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnForgotPasswordTapped" />
            </Label.GestureRecognizers>
        </Label>

        <Button
            Grid.Row="5"
            Margin="20,20"
            BackgroundColor="{DynamicResource Tertiary}"
            BorderWidth="2"
            CornerRadius="30"
            FontFamily="NexaHeavy"
            FontSize="20"
            Clicked="Adminlogin_clicked"
            HeightRequest="60"
            Text="Confirm"
            TextColor="{DynamicResource Secondary}"
            VerticalOptions="Start"
            WidthRequest="200" />


        <!--  Sign in Change  -->
        <StackLayout
            Grid.Row="6"
            HorizontalOptions="Center"
            Orientation="Horizontal"
            Spacing="15"
            VerticalOptions="Center">
            <!--<Button
            CornerRadius="3"
            FontFamily="NexaHeavy"
            HeightRequest="40"
            Text="Sign In"
            TextColor="Black"
            VerticalOptions="Center" />-->
            <Button
                BackgroundColor="{DynamicResource Tertiary}"
                Clicked="signin_clicked"
                CornerRadius="3"
                FontFamily="NexaHeavy"
                HeightRequest="40"
                Text="User Sign In"
                TextColor="{DynamicResource Secondary}"
                VerticalOptions="Center" />
        </StackLayout>

        <!--  || Fade Effect ||  -->
        <BoxView
            x:Name="fadeEffect"
            Grid.RowSpan="7"
            BackgroundColor="Black"
            IsVisible="false"
            Opacity="0.7">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnFadeEffectTapped" />
            </BoxView.GestureRecognizers>
        </BoxView>

        <!--  || Pop Up ||  -->
        <StackLayout
            x:Name="popup"
            Grid.RowSpan="7"
            IsVisible="false"
            VerticalOptions="End">

            <Frame
                Padding="10"
                BackgroundColor="White"
                CornerRadius="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  || Top Drag Indicator ||  -->
                    <BoxView
                        Grid.Row="0"
                        Margin="0,0,0,15"
                        BackgroundColor="Black"
                        CornerRadius="10"
                        HeightRequest="8"
                        HorizontalOptions="Center"
                        Opacity="0.3"
                        WidthRequest="100" />

                    <Grid Grid.Row="1" RowDefinitions="auto,auto,auto">

                        <Label
                            Grid.Row="0"
                            Margin="0,4,0,12"
                            FontSize="20"
                            HorizontalOptions="Center"
                            Text="Forgot Password"
                            TextColor="{DynamicResource Tertiary}"
                            VerticalOptions="Center" />

                        <Frame
                            Grid.Row="1"
                            Padding="10"
                            BorderColor="{DynamicResource Tertiary}"
                            CornerRadius="12"
                            HeightRequest="100">

                            <StackLayout>
                                <Label
                                    FontFamily="NexaHeavy"
                                    FontSize="18"
                                    Text="Email"
                                    TextColor="#9B9AA0" />

                                <Entry
                                    FontFamily="NexaHeavy"
                                    FontSize="18"
                                    HeightRequest="50"
                                    IsPassword="True"
                                    Placeholder="example@gmail.com"
                                    TextColor="Black" />
                            </StackLayout>
                        </Frame>


                        <Button
                            Grid.Row="3"
                            Margin="20,20"
                            BackgroundColor="{DynamicResource Tertiary}"
                            BorderWidth="2"
                            CornerRadius="30"
                            FontFamily="NexaHeavy"
                            FontSize="20"
                            HeightRequest="60"
                            Text="Confirm"
                            TextColor="{DynamicResource Secondary}"
                            VerticalOptions="Start"
                            WidthRequest="200" />
                    </Grid>
                </Grid>
            </Frame>
        </StackLayout>

    </Grid>
</ContentPage>