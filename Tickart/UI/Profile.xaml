<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Tickart.UI.Profile"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image
            Grid.ColumnSpan="2"
            Margin="0,50,0,50"
            HeightRequest="200"
            Source="profileicon.png" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,20,0,0"
            FontSize="30"
            HorizontalOptions="Center"
            Text="Name:"
            TextColor="Black"
            VerticalOptions="Start" />
        <Label
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,20,0,0"
            FontSize="30"
            HorizontalOptions="Center"
            Text="John Doe"
            TextColor="Black"
            VerticalOptions="Start" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,20,0,0"
            FontSize="30"
            HorizontalOptions="Center"
            Text="Email:"
            TextColor="Black"
            VerticalOptions="Start" />
        <Label
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,20,0,0"
            FontSize="30"
            HorizontalOptions="Center"
            Text="johndoe123"
            TextColor="Black"
            VerticalOptions="Start" />

        <Label
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,20,0,0"
            FontSize="30"
            HorizontalOptions="Center"
            Text="Password:"
            TextColor="Black"
            VerticalOptions="Start" />
        <Label
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,20,0,0"
            FontSize="30"
            HorizontalOptions="Center"
            Text="********"
            TextColor="Black"
            VerticalOptions="Start" />

        <Button
            Grid.Row="4"
            Grid.ColumnSpan="2"
            Margin="20,20"
            BackgroundColor="{DynamicResource Tertiary}"
            BorderWidth="2"
            CornerRadius="30"
            FontFamily="NexaHeavy"
            FontSize="20"
            HeightRequest="60"
            Clicked="EditProfile_Clicked"
            Text="Edit Profile"
            TextColor="{DynamicResource Secondary}"
            VerticalOptions="Start"
            WidthRequest="200" />

        <Button
            Grid.Row="5"
            Grid.ColumnSpan="2"
            Margin="20,20"
            BackgroundColor="{DynamicResource Tertiary}"
            BorderWidth="2"
            CornerRadius="30"
            FontFamily="NexaHeavy"
            FontSize="20"
            Clicked="Logout_Clicked"
            HeightRequest="60"
            Text="Logout"
            TextColor="{DynamicResource Secondary}"
            VerticalOptions="Start"
            WidthRequest="200" />



        <!--  || Fade Effect ||  -->
        <BoxView
            x:Name="fadeEffect"
            Grid.RowSpan="6"
            Grid.ColumnSpan="2"
            BackgroundColor="Black"
            IsVisible="false"
            Opacity="0.7">
            <BoxView.GestureRecognizers>
                <TapGestureRecognizer Tapped="OnFadeEffectTapped" />
            </BoxView.GestureRecognizers>
        </BoxView>
        
        <!--  || Pop Up ||  -->
        <StackLayout
            x:Name="popup"
            Grid.RowSpan="6"
            Grid.ColumnSpan="2"
            IsVisible="false"
            VerticalOptions="End">

            <Frame
                Padding="10"
                BackgroundColor="White"
                CornerRadius="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!--  || Top Drag Indicator ||  -->
                    <BoxView
                        Grid.Row="0"
                        Margin="0,0,0,15"
                        BackgroundColor="Black"
                        CornerRadius="10"
                        HeightRequest="8"
                        HorizontalOptions="Center"
                        Opacity="0.3"
                        WidthRequest="100" />

                    <Grid Grid.Row="1" RowDefinitions="auto,auto,auto">

                        <Label
                            Grid.Row="0"
                            Margin="0,4,0,12"
                            FontSize="20"
                            HorizontalOptions="Center"
                            Text="Edit Profile"
                            TextColor="{DynamicResource Tertiary}"
                            VerticalOptions="Center" />

                        <Frame
                            Grid.Row="1"
                            Padding="10"
                            BorderColor="{DynamicResource Tertiary}"
                            CornerRadius="12"
                            HeightRequest="100">

                            <StackLayout>
                                <Label
                                    FontFamily="NexaHeavy"
                                    FontSize="18"
                                    Text="First Name"
                                    TextColor="#9B9AA0" />

                                <Entry
                                    FontFamily="NexaHeavy"
                                    FontSize="18"
                                    HeightRequest="50"
                                    Placeholder="e.g. John Doe"
                                    TextColor="Black" />
                            </StackLayout>
                        </Frame>

                        <Frame
                            Grid.Row="2"
                            Margin="0,7"
                            Padding="10"
                            BorderColor="{DynamicResource Tertiary}"
                            CornerRadius="12"
                            HeightRequest="100">

                            <StackLayout>
                                <Label
                                    FontFamily="NexaHeavy"
                                    FontSize="18"
                                    Text="Last Name"
                                    TextColor="#9B9AA0" />

                                <Entry
                                    FontFamily="NexaHeavy"
                                    FontSize="18"
                                    HeightRequest="50"
                                    Placeholder="e.g. Watson"
                                    TextColor="Black" />
                            </StackLayout>
                        </Frame>

                        <Frame
                            Grid.Row="2"
                            Margin="0,7"
                            Padding="10"
                            BorderColor="{DynamicResource Tertiary}"
                            CornerRadius="12"
                            HeightRequest="100">

                            <StackLayout>
                                <Label
                                    FontFamily="NexaHeavy"
                                    FontSize="18"
                                    Text="Name"
                                    TextColor="#9B9AA0" />

                                <Entry
                                    FontFamily="NexaHeavy"
                                    FontSize="18"
                                    HeightRequest="50"
                                    Placeholder="e.g. Watson"
                                    TextColor="Black" />
                            </StackLayout>
                        </Frame>

                        <Frame
                            Grid.Row="3"
                            Margin="0,7"
                            Padding="10"
                            BorderColor="{DynamicResource Tertiary}"
                            CornerRadius="12"
                            HeightRequest="100">

                            <StackLayout>
                                <Label
                                    FontFamily="NexaHeavy"
                                    FontSize="18"
                                    Text="Email"
                                    TextColor="#9B9AA0" />

                                <Entry
                                    FontFamily="NexaHeavy"
                                    FontSize="18"
                                    HeightRequest="50"
                                    Placeholder="e.g. zee@abc.com"
                                    TextColor="Black" />
                            </StackLayout>
                        </Frame>

                        <Frame
                            Grid.Row="4"
                            Margin="0,7"
                            Padding="10"
                            BorderColor="{DynamicResource Tertiary}"
                            CornerRadius="12"
                            HeightRequest="100">

                            <StackLayout>
                                <Label
                                    FontFamily="NexaHeavy"
                                    FontSize="18"
                                    Text="Password"
                                    TextColor="#9B9AA0" />

                                <Entry
                                    FontFamily="NexaHeavy"
                                    FontSize="18"
                                    HeightRequest="50"
                                    IsPassword="True"
                                    Placeholder="xxxxxxxxxx"
                                    TextColor="Black" />
                            </StackLayout>
                        </Frame>

                        <Button
                            Grid.Row="5"
                            Margin="20,20"
                            BackgroundColor="{DynamicResource Tertiary}"
                            BorderWidth="2"
                            CornerRadius="30"
                            FontFamily="NexaHeavy"
                            FontSize="20"
                            HeightRequest="60"
                            Clicked="OnFadeEffectTapped"
                            Text="Confirm"
                            TextColor="{DynamicResource Secondary}"
                            VerticalOptions="Start"
                            WidthRequest="200" />
                    </Grid>
                </Grid>
            </Frame>
        </StackLayout>

















    </Grid>
</ContentPage>